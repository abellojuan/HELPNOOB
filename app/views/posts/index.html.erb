    <th>Upvotes</th>
    <th>Title</th>
    <th>Comments</th>
    
  </tr>
 
<% @posts.each do |post| %>
  <tr>
  	<%=  form_for( [post, @upvote]) do|f| %>
	
	  <fieldset>
	   <%= submit_tag "Upvote"%>
	  </fieldset>
	
<% end %>
    <th> <%= post.upvotes.length %>



    </th>
    <th> <%= link_to post.title, post.url %> </th>
    <th> <%= link_to post.comments.length, post_path(post) %></th>
          
  </tr>
<% end %>
</table>
 
