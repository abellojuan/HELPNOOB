


<%= form_for @post do|f| %>


  <div class="control-group">
    <%= f.label :title %>
    <div class="controls">
      <%= f.text_field :title %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :url %>
    <div class="controls">
      <%= f.text_field :url %>
    </div>
  </div>
  <div class="control-group">
    <div class="controls">      
      <%= f.submit "save!" %>
    </div>
  </div>


<% end %>

