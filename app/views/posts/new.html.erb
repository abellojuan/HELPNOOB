


<%= form_for(@post) do|f| %>

<% if !@post.valid? %>
  <div class='alert alert-error'>
    <%= @post.errors.full_messages.join('<br/>').html_safe %>
  </div>
<% end %>



  <div class="control-group">
    <%= f.label :title %>
    <div class="controls">
      <%= f.text_field :title %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :url %>
    <div class="controls">
      <%= f.text_field :url %>
    </div>
  </div>
  <div class="control-group">
    <div class="controls">      
      <%= f.submit "save!" %>
    </div>
  </div>


<% end %>

